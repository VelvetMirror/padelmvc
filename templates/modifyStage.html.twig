{% extends "layout.html.twig" %}
{% block body %}
<form name='form' id='form' class='form' action='insertStage.php' onsubmit='return validate(this)' method='post'>
    <fieldset>
        <legend>
            <span>Stage</span>
        </legend>
        <input type='hidden' id='leagueId' name='leagueId' value='{{stage.league_league_id}}' />
        <input type='hidden' id='stageId' name='stageId' value='{{stage.stage_id}}' />
        <div>
            <label for='number'>Number</label>
            <input name='number' id='number' type='text' value='{{stage.number}}' />
        </div>
        <div>
            <label for='startDate'>Start date</label>
            <input name='startDate' id='startDate' type='text' value='{{stage.start_date}}'/>
        </div>
        <div>
            <label for='finishDate'>Finish date</label>
            <input name='finishDate' id='finishDate' value='{{stage.finish_date}}' type='text' />
        </div>
        <div>
            <label for='year'>Start year</label>
            <input name='year' id='year' type='text' value='{{stage.year}}' />
        </div>
        <div>
            <label for='status'>Status</label>
            <input name='status' id='status' type='text' value='{{stage.status}}' />
        </div>
    </fieldset>
    <fieldset class='submit'>
        <input name='submit' id='submit' value='Insert' type='submit' class='button'/>
    </fieldset>
</form>
<a href='index.php'>Back</a>
{% endblock %}